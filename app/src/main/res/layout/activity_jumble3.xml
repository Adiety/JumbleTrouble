<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg8"
    android:layout_height="match_parent"
    tools:context="com.example.aditisharma.jumbletrouble.Jumble3">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="cursive"
        android:background="#F2F8D6"
        android:textSize="40dp"
        android:text=""
        android:gravity="center"
        android:layout_marginBottom="59dp"
        android:layout_alignBottom="@+id/Result"
        android:layout_alignStart="@+id/check" />
    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Result"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Score:"
        android:textColor="#F2F8D6"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <ImageButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        app:srcCompat="@android:drawable/ic_input_delete"
        android:layout_alignTop="@+id/tv1"
        android:layout_toEndOf="@+id/tv1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/check"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/b1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:background="@drawable/button_bg_round"
            android:fontFamily="cursive"
            android:text=""
            android:textStyle="bold"
            android:textColor="#F2F8D6"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/b2" />

        <Button
            android:id="@+id/b2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/b1"
            android:layout_alignBottom="@+id/b1"
            android:layout_toStartOf="@+id/b3"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textColor="#F2F8D6"
            android:background="@drawable/button_bg_round"
            android:text="" />

        <Button
            android:id="@+id/b3"
            android:layout_width="50dp"
            android:background="@drawable/button_bg_round"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textColor="#F2F8D6"
            android:layout_alignBaseline="@+id/b2"
            android:layout_alignBottom="@+id/b2"
            android:layout_toStartOf="@+id/b4" />

        <Button
            android:id="@+id/b5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_round"
            android:fontFamily="cursive"
            android:text=""
            android:textColor="#F2F8D6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_round"
            android:fontFamily="cursive"
            android:text=""
            android:textColor="#F2F8D6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_round"
            android:fontFamily="cursive"
            android:text=""
            android:textStyle="bold"
            android:textColor="#F2F8D6"
            android:layout_alignBaseline="@+id/b3"
            android:layout_alignBottom="@+id/b3"
            android:layout_toStartOf="@+id/clear"
            android:layout_marginEnd="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:background="@drawable/button_bg_round1"
        android:fontFamily="cursive"
        android:text="CHECK"
        android:textStyle="bold"
        android:layout_above="@+id/linearLayout2"
        android:layout_toStartOf="@+id/score" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/score"
        android:background="@drawable/button_bg_round1"
        android:fontFamily="cursive"
        android:text="NEXT"
        android:textStyle="bold" />



</RelativeLayout>
